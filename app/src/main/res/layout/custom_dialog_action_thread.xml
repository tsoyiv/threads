<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/btmDialog_actionThread"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:behavior_skipCollapsed="true"
    app:cardCornerRadius="16dp"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <ImageView
        android:id="@+id/image_for_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_btm_dialog" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="18dp"
        app:cardBackgroundColor="#EFEFEF"
        app:cardElevation="0dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:id="@+id/btnRepostThread"
            android:layout_width="380dp"
            android:layout_height="45dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/img_repostsvg" />

            <TextView
                android:id="@+id/btnRepost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:text="Repost"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:fontFamily="@font/sfmed" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnQuote"
            android:layout_width="380dp"
            android:layout_height="45dp"
            android:layout_marginTop="45dp" >

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/img_quote_thread" />

            <TextView
                android:id="@+id/btn_shareVia1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:text="Quote"
                android:textColor="#141414"
                android:fontFamily="@font/sfmed"
                android:textSize="17sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.cardview.widget.CardView>