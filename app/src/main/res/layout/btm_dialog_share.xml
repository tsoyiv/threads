<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/btmDialog_share"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:behavior_skipCollapsed="true"
    app:cardCornerRadius="16dp"
    android:background="@android:color/transparent"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <ImageView
        android:id="@+id/image_for_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_btm_dialog" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="18dp"
        app:cardBackgroundColor="#EFEFEF"
        app:cardElevation="0dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:id="@+id/btn_copyLink"
            android:layout_width="380dp"
            android:layout_height="45dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/img_copylink" />

            <TextView
                android:id="@+id/btn_copyLink1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/sfmed"
                android:layout_marginTop="10dp"
                android:text="Copy link"
                android:textColor="#141414"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_shareVia"
            android:layout_width="380dp"
            android:layout_height="45dp"
            android:layout_marginTop="45dp" >

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/img_share1" />

            <TextView
                android:id="@+id/btn_shareVia1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/sfmed"
                android:text="Share via.."
                android:textColor="#141414"
                android:textSize="17sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.cardview.widget.CardView>

