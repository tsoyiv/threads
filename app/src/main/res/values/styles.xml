<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="AppBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="colorPrimary">@color/black</item> <!-- Selected color -->
        <item name="colorOnPrimary">#B8B8B8</item>
    </style>
    
    <style name="HeaderMainTexts" >
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/sfbold</item>
    </style>

    <style name="AuthHeaderText" >
        <item name="android:fontFamily">@font/sfbold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="SecondaryHeaderTexts" >
        <item name="android:fontFamily">@font/sfmed</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CustomTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">@android:color/black</item>
        <item name="tabTextAppearance">@style/CustomTabTextAppearance</item>
    </style>

    <style name="CustomTabTextAppearance">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">17sp</item>
        <item name="fontFamily">@font/sf_reg</item>
        <item name="android:textAllCaps">false</item>
        <item name="tabSelectedTextColor">@color/custom_tab_text_color_selected</item>
    </style>

</resources>