<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="AppBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="colorPrimary">@color/black</item> <!-- Selected color -->
        <item name="colorOnPrimary">#B8B8B8</item>
    </style>
    
    <style name="HeaderMainTexts" >
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/sfbold</item>
    </style>

    <style name="AuthHeaderText" >
        <item name="android:fontFamily">@font/sfbold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="SecondaryHeaderTexts" >
        <item name="android:fontFamily">@font/sfmed</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CustomTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">@android:color/black</item>
        <item name="tabTextAppearance">@style/CustomTabTextAppearance</item>
    </style>

    <style name="CustomTabTextAppearance">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">17sp</item>
        <item name="fontFamily">@font/sf_reg</item>
        <item name="android:textAllCaps">false</item>
        <item name="tabSelectedTextColor">@color/custom_tab_text_color_selected</item>
    </style>

    <style name="SecondaryAuthHeaderText" >
        <item name="android:fontFamily">@font/sfthin</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="AuthEditTextSetup" >
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/sfthin</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">#999999</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="ForgotPassText" >
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/sfbold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Buttons">
        <item name="android:fontFamily">@font/sfbold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SearchViewRepresentation">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">#3C3C4399</item>
        <item name="android:background">@drawable/custom_search_view</item>
        <item name="android:iconifiedByDefault">false</item>
        <item name="android:queryBackground">@android:color/transparent</item>
        <item name="android:queryHint">Search</item>
    </style>
    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="android:src">@drawable/img_userphoto</item>
        <item name="android:background">#D9D9D9</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="txtReply">
        <item name="android:textColor">#999999</item>
        <item name="android:fontFamily">@font/sf_reg</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="txtPOst">
        <item name="android:fontFamily">@font/sf_reg</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>